<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<Pane prefHeight="600.0" prefWidth="900.0" stylesheets="@../common/style.css" xmlns="http://javafx.com/javafx/8.0.60"
      xmlns:fx="http://javafx.com/fxml/1">
    <ImageView fitHeight="700.0" fitWidth="900.0" onMouseDragged="#onDrag" onMousePressed="#onDragStart"
               preserveRatio="true">
        <Image url="@../common/bg.jpg"/>
    </ImageView>
    <ImageView layoutX="40.0" layoutY="30.0" preserveRatio="true">
        <Image url="@../common/title-h.png"/>
    </ImageView>

    <Label fx:id="labelUsername" alignment="CENTER_RIGHT" layoutX="409.0" layoutY="46.0" onMouseDragged="#onDrag"
           onMousePressed="#onDragStart" prefWidth="400.0" text="" textFill="WHITE">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <Label fx:id="labelUserType" alignment="CENTER_RIGHT" layoutX="409.0" layoutY="66.0" onMouseDragged="#onDrag"
           onMousePressed="#onDragStart" prefWidth="400.0" text="" textAlignment="RIGHT" textFill="WHITE">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>
    <ImageView fitHeight="35.0" fitWidth="35.0" layoutX="819.0" layoutY="49.0" onMouseDragged="#onDrag"
               onMousePressed="#onDragStart" pickOnBounds="true" preserveRatio="true">
        <Image url="@../common/icons/user.png"/>
    </ImageView>

    <Pane fx:id="navPane" layoutY="100.0" prefHeight="470.0" prefWidth="200.0"/>

    <Button fx:id="btnLogout" layoutX="55.0" layoutY="530.0" prefHeight="30.0" prefWidth="90.0" styleClass="btn-r,btn-blue" text="退出登录" onAction="#onLogoutAction">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>

    <Pane fx:id="contentPane" layoutX="200.0" layoutY="100.0" prefHeight="470.0" prefWidth="700.0"
          style="-fx-background-color: #ffffff;"/>

    <Pane layoutY="570.0" prefHeight="30.0" prefWidth="900.0" style="-fx-background-color: #3c3f41;">
        <Hyperlink layoutX="854.0" layoutY="5.0" text="关于"/>
        <Label layoutX="14.0" layoutY="8.0" text="酒店管理系统 客户端 ©2016 Quadra." textFill="WHITE"/>
    </Pane>
</Pane>

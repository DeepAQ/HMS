<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Pane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <Label layoutX="45.0" layoutY="25.0" text="用户管理">
        <font>
            <Font size="24.0"/>
        </font>
    </Label>

    <Pane fx:id="pane" layoutX="45.0" layoutY="74.0">

        <TableView fx:id="tableUserInfo" prefHeight="320.0" prefWidth="620.0">
            <columns>
                <TableColumn prefWidth="250.0" text="用户名"/>
                <TableColumn prefWidth="120.0" text="姓名"/>
                <TableColumn prefWidth="120.0" text="联系方式"/>
                <TableColumn prefWidth="110.0" text="用户类型"/>
            </columns>
        </TableView>

        <Button layoutX="100.0" layoutY="336.0" prefHeight="30.0" prefWidth="90.0"
                styleClass="btn-r,btn-blue" text="修改" onAction="#onModifyAction">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>
        <Button layoutX="200.0" layoutY="336.0" prefHeight="30.0" prefWidth="90.0"
                styleClass="btn-r,btn-red" text="删除" onAction="#onDeleteAction">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>
        <Button layoutY="336.0" prefHeight="30.0" prefWidth="90.0"
                styleClass="btn-r,btn-green" text="新增" onAction="#onAddAction">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>
    </Pane>
</Pane>

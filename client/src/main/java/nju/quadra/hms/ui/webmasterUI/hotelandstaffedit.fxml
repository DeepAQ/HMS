<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="540.0" prefWidth="630.0" stylesheets="@../common/style.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
    <Label layoutX="45.0" layoutY="20.0" text="修改酒店信息">
        <font>
            <Font size="24.0" />
        </font>
    </Label>

    <Label layoutX="55.0" layoutY="80.0" text="酒店名">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
    <TextField fx:id="textName" layoutX="130.0" layoutY="80.0" prefWidth="250.0" promptText="酒店名">
        <font>
            <Font size="14.0" />
        </font>
    </TextField>

    <Label layoutX="55.0" layoutY="130.0" text="商圈">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
    <HBox layoutX="130.0" layoutY="130.0" spacing="10.0">
        <ChoiceBox fx:id="choiceCity" />
        <ChoiceBox fx:id="choiceArea" />
    </HBox>

    <Label layoutX="55.0" layoutY="180.0" text="地址">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
    <TextField fx:id="textAddress" layoutX="130.0" layoutY="180.0" prefWidth="500.0" promptText="地址">
        <font>
            <Font size="14.0" />
        </font>
    </TextField>

    <Label layoutX="55.0" layoutY="230.0" text="简介">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
    <TextArea fx:id="areaDescription" layoutX="130.0" layoutY="230.0" prefHeight="100.0" prefWidth="500.0" promptText="简介">
        <font>
            <Font size="14.0" />
        </font>
    </TextArea>

    <Label layoutX="55.0" layoutY="345.0" text="设施服务">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
    <TextField fx:id="textFacilities" editable="false" layoutX="130.0" layoutY="345.0" prefWidth="500.0" promptText="设施服务">
        <font>
            <Font size="14.0" />
        </font>
    </TextField>

    <Label layoutX="55.0" layoutY="395.0" text="星级">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
    <ChoiceBox fx:id="choiceStar" layoutX="130.0" layoutY="395.0" />

    <Label layoutX="55.0" layoutY="445.0" text="工作人员">
        <font>
            <Font size="14.0" />
        </font></Label>
    <TextField fx:id="textStaff" layoutX="130.0" layoutY="445.0" prefWidth="150.0" editable="false"/>

    <Button fx:id="btnSave" layoutX="55.0" layoutY="495.0" onAction="#onSaveAction" prefHeight="30.0" prefWidth="90.0" styleClass="btn-r,btn-blue" text="保存">
        <font>
            <Font size="14.0" />
        </font>
    </Button>

    <Button fx:id="btnCancel" layoutX="165.0" layoutY="495.0" onAction="#onCancelAction" prefHeight="30.0" prefWidth="90.0" styleClass="btn-r,btn-red" text="取消">
        <font>
            <Font size="14.0" />
        </font>
    </Button>
</Pane>
